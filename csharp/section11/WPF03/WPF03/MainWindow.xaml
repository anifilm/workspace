<Window x:Class="WPF03.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF03"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <TextBlock HorizontalAlignment="Center" Margin="20">Hello World!</TextBlock>
        <ListBox Height="70" Width="100">
            <ListBoxItem HorizontalAlignment="Center" Content="Item 1"/>
            <ListBoxItem HorizontalAlignment="Center" Content="Item 2"/>
            <ListBoxItem HorizontalAlignment="Center" Content="Item 3"/>
        </ListBox>
        <Button Content="Click me" Click="Button_Click" Margin="20"></Button>
    </StackPanel>
</Window>
